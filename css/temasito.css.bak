/* NAVBAR */

nav.pagination {
  display: float;
  grid-template-columns: repeat(auto-fit, minmax( 20px, 0.3fr ));
  text-align: center;
  background-color: pink;
}

nav.pagination.a {
  padding: 25px 0;
  background-color: pink;
}

nav.pagination.span {
  padding: 20px 0;
  background-color: pink;
}

nav {
	font-size: 30px;
	color: black;
	font-family: Montserrat, sans-serif;
	text-align: right;
	background-color: pink;
}
body {
	background-color: pink;
	font-family: Montserrat, sans-serif;
}


/* CONTACT FORM */

h2 {
	font-size: 36px;
	text-align: center;
	font-family: Montserrat, sans-serif;
} 

input {
	padding-top: 10px;
	padding-bottom: 10px;
	background-color: white;
	color: black;
	border-radius: 10px;
	width: 500px;
	margin: auto;
	width: 300px;
	max-width: 100%;
}

input[type=text], textarea {
  box-sizing: border-box;
  width: 400px;
  max-width: 100%;
  padding: 10px;
  border: 1px solid #CCC;
  border-radius: 3px;
  margin-top: 5px;
  margin-bottom: 15px;
  resize: vertical;
}

input[type=submit] {
  background-color: black;
  color: #FFF;
  padding: 10px 10px;
  border: none;
  border-radius: 3px;
  cursor: pointer;
  width: 100px;
  max-width: 100%;
}

input[type=submit]:hover {
  background-color: rgb(255,192,203);

}
form , .row.my-5.mx-5.bg-white.p-5 {
	max-width: 100%;
	margin:0;
}

/* ICONS */

.fab:hover {
  background-color: #FFB6C1;
  transition: ease-in-out 0.2s;
}

/* ASIDE */

